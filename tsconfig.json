{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "target": "es2015",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "exclude": ["dist", "node_modules"]
}
